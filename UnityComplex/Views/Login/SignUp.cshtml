@model UnityComplex.ViewModels.RegisterVM
@{
    ViewData["Title"] = "SignUp";
    Layout = "_LoginLayout";
}

<section class="banner-area organic-breadcrumb" style="margin-bottom:50px">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Trang đăng ký</h1>
                <nav class="d-flex align-items-center">
                    <a asp-controller="Home" asp-action="Index">Trở về trang chủ<span class="lnr lnr-arrow-right"></span></a>
                </nav>
            </div>
        </div>
    </div>
</section>


<section class="login_box_area section_gap" style="margin-bottom:30px">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" style="width:600px; height:688px" src="~/img/newlogin.jpg" alt="">
                    <div class="hover">
                        <h4>Bạn đã có tài khoản?</h4>

                        <a class="primary-btn" asp-action="Login" asp-controller="Login">Đăng nhập ngay</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Đăng ký tài khoản mới</h3>
                    @if (TempData["SignUpSuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SignUpSuccessMessage"]</div>
                    }
                    @if (TempData["DuplicateEmailMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["DuplicateEmailMessage"]</div>
                    }


                    <form class="login_form" asp-controller="Login" asp-action="SignUp" method="post" id="contactForm" novalidate="novalidate">
                        <div class="form-group">
                            <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Email *" required>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="@Model.FullName" placeholder="Họ và tên *" required>
                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" asp-for="@Model.PhoneNumber" placeholder="Số điện thoại *" required>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Địa chỉ *" required>
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Mật khẩu *" required>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" value="submit" class="primary-btn">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
