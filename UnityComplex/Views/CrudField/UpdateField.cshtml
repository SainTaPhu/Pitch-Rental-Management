@model UnityComplex.Models.Field

@{
    ViewData["Title"] = "UpdateField";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Tạo Sân</h1>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->

<section class="blog_categorie_area">
</section>



<!-- Body -->
<div class="container-create-field">
    <h1 class="h1-create-field">Chỉnh Sửa Sân Vận Động</h1>
    <form method="post" asp-action="UpdateField" enctype="multipart/form-data">
        <input type="hidden" asp-for="IdField" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="label-create-field" asp-for="FieldName">Tên Sân :</label>
            <input type="text" asp-for="FieldName" class="form-control" required />
            <span asp-validation-for="FieldName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="label-create-field">Hình Ảnh Sân:</label>
            <!-- Hiển thị các hình ảnh cũ -->
            @foreach (var image in Model.Images)
            {
                <img style="width:50px;height:50px" src="~/img/@image.Image1" class="existing-image" />
            }
            <!-- Cho phép người dùng tải lên hình ảnh mới -->
            <input type="file" name="files" accept=".jpg, .jpeg, .png" class="form-control-file" required />
            <input type="file" name="files" accept=".jpg, .jpeg, .png" class="form-control-file" required />
            <input type="file" name="files" accept=".jpg, .jpeg, .png" class="form-control-file" required />
        </div>
        <div class="form-group">
            <label asp-for="Decription" class="label-create-field">Mô Tả:</label>
            <textarea asp-for="Decription" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="Decription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="label-create-field">Giá Sân :</label>
            <div style="display: flex;">
                <div>
                    <label asp-for="MorningPrice">Giá Buổi Sáng:</label>
                    <input asp-for="MorningPrice" class="form-control" min="10000" max="999999999" required />
                    <span asp-validation-for="MorningPrice" class="text-danger"></span>
                    <label asp-for="AfternoonPrice">Giá Buổi Chiều:</label>
                    <input asp-for="AfternoonPrice" class="form-control" min="10000" max="999999999" required />
                    <span asp-validation-for="AfternoonPrice" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div>
            <label style="display: block;" class="label-create-field" asp-for="IdSport">Môn Thể Thao:</label>
            <select asp-for="IdSport" class="form-control" asp-items="ViewBag.IdSport"></select>
        </div>
        <div style="margin-top: 70px;">
            <input type="submit" value="Lưu" class="button-create-field" />
        </div>
    </form>
</div>


<script>
    function limitToOneFile(inputId) {
        const input = document.getElementById(inputId);
        if (input.files.length > 1) {
            alert("Chỉ được chọn một tệp.");
            input.value = '';
        }
    }
</script>
